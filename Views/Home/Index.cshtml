@model IEnumerable<CasaDeShow1.Models.Evento>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@{
    ViewData["Title"] = "Home Page";
}

<section >
      <div id="carouselImagens" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselImagens" data-slide-to="0" class="active"></li>
          <li data-target="#carouselImagens" data-slide-to="1"></li>
          <li data-target="#carouselImagens" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="~/img/funk2.jpg" class="d-block w-100" style="width: 100px; height: 500px " alt="img funk">
          </div>

          <div class="carousel-item">
            <img src="~/img/rock12.jpg" class="d-block w-100"  style="width: 100px; height: 500px " alt="img rock">
          </div>

          <div class="carousel-item">
            <img src="~/img/sertanejo2.jpg" class="d-block w-100" style="width: 100px; height: 500px" alt="img sertanejo">
          </div>
        </div>

        <a class="carousel-control-prev" href="#carouselImagens" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselImagens" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <br>
</section>


<section>
  <div >
    <H2 class="text-center">Confira todos os eventos</H2>
    <hr>
    </div>
  <table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <th scope="col">Capacidade</th>
            <th scope="col">Preço</th>
            <th scope="col">Categoria</th>
            <th scope="col">Local</th>
            <th scope="col">Data do Evento</th>
            <th scope="col">Ações</th>
        </tr>
  </thead>

    @foreach (var evento in Model)
    {    
        <tbody>  
            <tr>
                <th scope="row">@evento.Id</th>
                <td>@evento.Nome</td>
                <td>@evento.Capacidade</td>    
                <td>@evento.preco</td>
                <td>@evento.categoria</td>
                <td>@Html.DisplayFor(model => evento.Local.Nome)</td>
                <td>@evento.Data</td>
                <td>@if(SignInManager.IsSignedIn(User)){
                  <a href="/Compra/comprar/@evento.Id" class="btn btn-info">Comprar</a>
                }else{
                  <a href="/Identity/Account/Login" class="btn btn-info">Comprar</a>
                }</td>              
                                
            </tr>
        </tbody> 
    }
     </table>
</section>