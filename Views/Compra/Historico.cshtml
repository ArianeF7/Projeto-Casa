@model IEnumerable<CasaDeShow1.Models.Comprar>

 <div >
     <h1>Otima escolha!</h1>
     <H2 class="text-center">Histórico de Compras</H2>   
     <hr>
</div>

    <table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nome do Evento</th>
            <th scope="col">Quantidade Ingressos comprados</th>
            <th scope="col">Preço unitário</th> 
            <th scope="col">Valor Total da compra</th>            
            <th scope="col">Local</th>
            <th scope="col">Data do Evento</th>
        </tr>
  </thead>

    @foreach (var compra in Model)
    {    
        <tbody>  
            <tr>
                <td>@Html.DisplayFor(model => compra.Evento.Nome)</td>
                <td>@compra.Quantidade    
                <td>@String.Format("R$ {0:0.00}", compra.Evento.preco).Replace(".", ",")</td> 
                <td>@String.Format("R$ {0:0.00}", compra.TotalCompra).Replace(".", ",")</td>            
                <td>@Html.DisplayFor(model => compra.Evento.Local.Nome)</td>
                <td>@Html.DisplayFor(model => compra.Evento.Data)</td>
            </tr>
        </tbody> 
    }
     </table>