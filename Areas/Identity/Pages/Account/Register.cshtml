@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastrar novo usuário";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <p>Nome de Usuário</p>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <p>Senha</p>
                <input asp-for="Input.Senha" class="form-control" />
                <span asp-validation-for="Input.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Confirmar Senha</p>
                <input asp-for="Input.ConfirmSenha" class="form-control" />
                <span asp-validation-for="Input.ConfirmSenha" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <p>Tipo de Usuário:</p>
                <p>Digite "A" para Criar novos eventos ou Digite "U" para visualizar e/ou comprar ingressos</p>
                <input asp-for="Input.Tipo" class="form-control" />
                <span asp-validation-for="Input.Tipo" class="text-danger"></span>               
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
